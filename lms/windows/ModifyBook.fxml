<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lms.windows.ModifyBookController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" prefHeight="386.0" prefWidth="396.0">
         <children>
            <Label prefHeight="33.0" prefWidth="366.0" text="Modify Book" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="title" prefHeight="38.0" prefWidth="359.0" promptText="Title">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="subject" prefHeight="38.0" prefWidth="359.0" promptText="Subject">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="author" prefHeight="38.0" prefWidth="359.0" promptText="Author">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="ISBN" prefHeight="38.0" prefWidth="359.0" promptText="ISBN">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="publishDate" prefHeight="38.0" prefWidth="359.0" promptText="Publish Date">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="quantity" prefHeight="38.0" prefWidth="359.0" promptText="Quantity">
               <VBox.margin>
                  <Insets bottom="30.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <HBox layoutX="10.0" layoutY="403.0" prefHeight="74.0" prefWidth="396.0">
         <children>
            <Button fx:id="modify" mnemonicParsing="false" onAction="#modify" prefHeight="51.0" prefWidth="142.0" text="Modify" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefHeight="49.0" prefWidth="134.0" text="Cancel" />
         </children>
         <padding>
            <Insets left="45.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
