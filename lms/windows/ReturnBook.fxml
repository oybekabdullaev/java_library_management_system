<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="lms.windows.ReturnBookController">
   <children>
      <VBox layoutX="5.0" prefHeight="349.0" prefWidth="396.0">
         <children>
            <Label prefHeight="33.0" prefWidth="366.0" text="Return book" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="student_id" prefHeight="38.0" prefWidth="359.0" promptText="Student id">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="book_id" prefHeight="38.0" prefWidth="359.0" promptText="Book id">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="return_date" prefHeight="38.0" prefWidth="359.0" promptText="Return date">
               <VBox.margin>
                  <Insets bottom="40.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="74.0" prefWidth="396.0">
               <children>
                  <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnBook" prefHeight="51.0" prefWidth="142.0" text="Return" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefHeight="49.0" prefWidth="134.0" text="Cancel" />
               </children>
               <padding>
                  <Insets left="45.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
